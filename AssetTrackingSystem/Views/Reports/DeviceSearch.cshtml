@model AssetTrackingSystem.Models.ViewModels.DeviceSearchViewModel

@{
    ViewData["Title"] = "Cihaz Arama - Demirbaþ Takip Sistemi";
}

<div class="container-fluid">
    <div class="page-header">
        <h1><i class="bi bi-search me-2"></i>Cihaz Arama</h1>
    </div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="post" class="row g-3">
                <div class="col-md-4">
                    <input asp-for="ModelSearch" class="form-control" placeholder="Model adý">
                </div>
                <div class="col-md-4">
                    <input asp-for="SerialNumberSearch" class="form-control" placeholder="Seri/IMEI no">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Ara</button>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("DeviceSearch")" class="btn btn-outline-secondary w-100">Temizle</a>
                </div>
            </form>
        </div>
    </div>
    @if (Model.IsSearchPerformed)
    {
        <div class="card shadow">
            <div class="card-header">
                <h5 class="mb-0">Arama Sonuçlarý (@Model.Results.TotalResults kayýt bulundu)</h5>
            </div>
            <div class="card-body p-0">
                @if (Model.Results.HasResults)
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Tür</th>
                                    <th>Model</th>
                                    <th>Seri No</th>
                                    <th>Kullanýcý</th>
                                    <th>Konum</th>
                                    <th>Durum</th>
                                    <th>Ýþlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Results.AllResults)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge @(item.DeviceType == "Computer" ? "bg-primary" :
                                                                                                                 item.DeviceType == "DisplayMonitor" ? "bg-info" :
                                                                                                                 item.DeviceType == "MobilePhone" ? "bg-success" :
                                                                                                                 item.DeviceType == "JabraHeadset" ? "bg-warning" : "bg-secondary")">
                                    @item.DeviceTypeDisplayName
                                </span>
                            </td>
                            <td>
                                <strong>@item.Model</strong>
                            </td>
                            <td>
                                <code>@item.SerialNumber</code>
                            </td>
                            <td>
                                @if (item.DeviceType == "Printer")
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                            else
                                            {
                                                @if (!string.IsNullOrEmpty(item.UserName) && !string.IsNullOrEmpty(item.UserSurname))
                                                {
                                                    <strong>@item.FullUserName</strong>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Atanmamýþ</span>
                                                }
                                            }
                                        </td>
                                        <td>
                                            @if (item.DeviceType == "Printer")
                                            {
                                                @(!string.IsNullOrEmpty(item.Location) ? item.Location : "Konum belirtilmemiþ")
                                            }
                                            else
                                            {
                                                @if (item.IsInWarehouse)
                                                {
                                                    <span class="badge bg-warning">Depoda</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Aktif Kullanýmda</span>
                                                }
                                            }
                                        </td>
                                        <td>
                                            <span class="badge @item.StatusClass">@item.StatusText</span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="@Url.Action("Details", item.ControllerName, new { id = item.Id })"
                                                   class="btn btn-outline-primary" title="Detaylar">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", item.ControllerName, new { id = item.Id })"
                                                   class="btn btn-outline-secondary" title="Düzenle">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Arama kriterlerinize uygun cihaz bulunamadý.
                    </div>
                }
            </div>
        </div>
    }
</div>